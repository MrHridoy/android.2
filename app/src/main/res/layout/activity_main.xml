<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mrhridoy.currencyconverter.MainActivity">

    <ImageView

        android:id="@+id/curren_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/currencypic"
        android:paddingTop="130dp"

         />
    <TextView
        android:id="@+id/textview"
        android:text="Currency Converter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="15dp"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:textColor="#e6650f"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Amount Of Taka"
        android:textSize="25sp"
        android:layout_below="@+id/textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <Button
        android:id="@+id/convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:textSize="20sp"
        android:layout_below="@+id/edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"

        >

        <TextView
            android:id="@+id/textview_riyal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Saudi Riyal"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_above="@+id/textview_dollar"
            android:layout_alignParentStart="true"
            android:textColor="#aa581064" />

        <TextView
            android:id="@+id/textview_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="American Dollar"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginRight="200dp"
            android:layout_marginBottom="16dp"
            android:layout_above="@+id/textview_pound"
            android:layout_alignParentStart="true"
            android:textColor="#aa581064"/>

        <TextView
        android:id="@+id/textview_pound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="British Pound"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/textview_euro"
        android:layout_alignParentStart="true"
        android:textColor="#aa581064"/>

    <TextView
        android:id="@+id/textview_euro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Euro"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="#aa581064" />
    </RelativeLayout>

</RelativeLayout>
